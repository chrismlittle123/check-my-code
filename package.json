{
  "name": "check-my-code",
  "version": "1.0.0",
  "description": "Run ESLint and Ruff linters on your code",
  "main": "dist/cli/index.js",
  "bin": {
    "cmc": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "linter",
    "eslint",
    "ruff",
    "cli",
    "typescript",
    "python"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^20.10.0",
    "eslint": "^9.15.0",
    "globals": "^16.5.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.4.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.15.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "commander": "^11.1.0",
    "glob": "^10.3.0",
    "zod": "^4.1.13"
  },
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "tests/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
