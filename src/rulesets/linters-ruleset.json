{
  "meta": {
    "name": "linters",
    "version": "1.0.0",
    "description": "Real linter integration - ESLint for JS/TS, Ruff for Python"
  },
  "rules": {
    "eslint": {
      "type": "linter",
      "linter": "eslint",
      "message": "ESLint violation",
      "config": {
        "extraArgs": ["--no-error-on-unmatched-pattern"]
      }
    },
    "ruff": {
      "type": "linter",
      "linter": "ruff",
      "message": "Ruff violation",
      "config": {
        "select": ["F", "E", "W", "I", "N"],
        "ignore": ["E501"]
      }
    }
  }
}
